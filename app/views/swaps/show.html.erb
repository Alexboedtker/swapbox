<div class="container">
  <div class="row">
    <div class="col-8">
      <h1> Swap info</h1>
    </div>

    <div class="col-4">
      <h3>Chat with <%= @chat_user.first_name %></h3>
      <div class="show-card p-3">
        <div id="messages" data-swap-id="<%= @swap.id %>">
          <% @swap.messages.each do |message| %>
          <%= render 'messages/message', message: message  %>
          <% end %>
        </div>

          <%= simple_form_for [ @swap, @message ] do |f| %>
            <div class="submit-control">
              <%= f.input :content, label: false, placeholder: "Type your message here...", class: "submit-message" %>
              <div class="submit">
                <%= button_tag type: 'submit', class: "btn-swap" do %>
                  <i class="fas fa-reply" aria-hidden="true"></i>
                <% end %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>





