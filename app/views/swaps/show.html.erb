<div class="container d-flex">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-6 col-lg-8">
      <h2> Swap info</h2>
      <%= render 'shared/swap_show_info' %>
    </div>

    <div class="col-12 col-sm-12 col-md-6 col-lg-4">
      <h2>Chat with <%= @chat_user.first_name %></h2>
      <div class="show-card p-3">
        <div id="messages" data-swap-id="<%= @swap.id %>" data-user-id="<%= current_user.id %>">
          <% @swap.messages.each do |message| %>
          <%= render 'messages/message', message: message  %>
          <% end %>
        </div>
        <%= simple_form_for([ @swap, @message ], remote: true) do |f| %>
          <div class="d-flex">
            <div class="submit-control">
              <%= f.input :content, label: false, placeholder: "Type your message...", input_html: { autocomplete: "off" }, class: "submit-message" %>
            </div>
            <div class="submit">
              <%= button_tag type: 'submit', class: "btn-swap" do %>
                <i class="fas fa-reply" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<p class="back-link"><%= link_to 'Back to Dashboard', my_dashboard_path %></p>





