<h1>#<%= @swap.id %></h1>
<div id="messages" data-swap-id="<%= @swap.id %>">
  <% @swap.messages.each do |message| %>
    <div class="container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.first_name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @swap, @message ], remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Organize your swap!" %>
<% end %>
