<div class="d-flex">
  <div class="ml-2">
    <h2>Discover our offer</h2>
  </div>
  <%= render 'shared/searchbar' %>
</div>
<div class="d-flex">
  <div class="container ml-1">
    <p class="text-align-left"><%= @count %> Products available: <%= @book_count %> <i class="fas fa-book"></i> & <%= @puzzle_count %> <i class="fas fa-puzzle-piece"></i></p>
    <%= render 'shared/index' %>
  </div>
  <div id="map" style="width: 50%; height: 100vh;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
