<div class="container">
  <div class="show-card">
    <% if @product.photo.attached? %>
      <%= cl_image_tag(@product.photo.key) %>
    <% elsif @product.category== 'Book' %>
      <%= image_tag('book-placeholder.jpg', alt: @product.title) %>
    <% else %>
      <%= image_tag('puzzle-placeholder.jpg', alt: @product.title) %>
    <% end %>
    <div class="card-bottom">
      <div>
        <h1><%= @product.title  %></h1>
        <p><%= @product.description  %></p>
        <p><i class="fas fa-map-marker-alt"></i><%= @product.city %></p>
      </div>
      <div class="card-right">
        <%= link_to 'Swap', '#', class: "btn-swap"  %>
      </div>
    </div>
  </div>
</div>
