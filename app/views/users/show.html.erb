<h1><%= @user.first_name %> <%= @user.last_name %> </h1>
<p>Check out what others have you said:</p>
<p> Reviews: <%= @reviews.count %> </p>

<%= simple_form_for [ @user, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.submit "Submit review", class: "btn-swap" %>
<% end %>

<% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>
