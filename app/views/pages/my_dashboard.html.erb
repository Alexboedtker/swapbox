<%= render 'shared/back_arrow' %>
<div class="mt-4">
  <h1>Hi <strong><%= @user.first_name %></strong></h1>
</div>
<div class="container">
  <% if @user.products.where(status: 1).count == 0 %>
    <div>
      <h2>You don't have any new requests</h2>
    </div>
    <div class="row">
      <div class='col-12'>
        <%= image_tag('my_dashboard_placeholder.png', alt: 'placeholder photo', class: "banner-small")%>
      </div>
    </div>
  <% else %>
    <h2>Requests for <strong>You</strong></h2>
      <div>
        <%= render 'shared/swap_request_for_owner' %>
      </div>
  <% end %>
</div>
<div class="wrapper mt-4">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-6 col-lg-6 border-division">
        <div class="text">
          <h2>Accepted Swaps</h2>
        </div>
        <div class="row mr-2">
          <%= render 'shared/accepted_swaps' %>
        </div>
      </div>
      <div class="col-12 col-sm-12 col-md-6 col-lg-6 ">
        <div class="text">
          <h2>Sent Requests</h2>
        </div>
        <div class="row ml-3">
          <%= render 'shared/swaps_requests' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mb-3">
  <h2>Your available Products</h2>
  <%= render 'shared/carousel_products', all_products: @products %>
</div>
